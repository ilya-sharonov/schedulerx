{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "esnext"],
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": false,
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "rootDir": "./src",
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "tests"]
}
